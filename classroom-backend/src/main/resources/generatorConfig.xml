    <!--    <table schema="" tableName="teacher"/>-->
    <!--    <table schema="" tableName="picture"/>-->
    <!--    <table schema="" tableName="comments"/>-->
    <!--    <table schema="" tableName="inform"/>-->
    <!--    <table schema="" tableName="inform_comments"/>-->
    <!--    <table schema="" tableName="sw_file"/>-->
  </context>
</generatorConfiguration>
